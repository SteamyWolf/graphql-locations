model Coordinate {
  id        Int @id @default(autoincrement())
  longitude String
  latitude  String
  location  Location @relation(fields: [locationId], references: [id])
  locationId Int
}

model Location {
  name      String
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  description String?
  coordinates Coordinate[]
}